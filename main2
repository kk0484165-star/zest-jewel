<script>
  // âœ… APNA WHATSAPP NUMBER YAHAN DAALO (country code ke sath, bina +)
  // Example: 919876543210
  const WHATSAPP_NUMBER = "91XXXXXXXXXX"; // <-- yahan apna full 10-digit number daalo

  const params = new URLSearchParams(window.location.search);
  const name = params.get("name") || "";
  const price = params.get("price") || "";

  document.getElementById("pName").textContent = name || "-";
  document.getElementById("pPrice").textContent = price || "-";

  function goBack(){
    window.location.href = "index.html";
  }

  function sendWhatsApp(){
    const cName = document.getElementById("cName").value.trim();
    const cPhone = document.getElementById("cPhone").value.trim();
    const cAddress = document.getElementById("cAddress").value.trim();
    const cNote = document.getElementById("cNote").value.trim();
    const msg = document.getElementById("msg");

    if(!name || !price){
      msg.textContent = "Product missing. Please go back and click Buy again.";
      return;
    }
    if(!cName || !cPhone){
      msg.textContent = "Name & Mobile required.";
      return;
    }
    if(WHATSAPP_NUMBER.includes("X")){
      msg.textContent = "WhatsApp number set nahi hai. Code me WHATSAPP_NUMBER change karo.";
      return;
    }

    const text =
`Hello Zest Jewel!
I want to order:
Product: ${name}
Price: â‚¹${price}

Customer Name: ${cName}
Mobile: ${cPhone}
Address: ${cAddress || "-" }
Note: ${cNote || "-" }

Please confirm availability & delivery.`;

    const waUrl = `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(text)}`;
    window.open(waUrl, "_blank");
  }
</script>
